<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.8"
        tools:context="eu.arrowhead.arrowheaddemo.ReservationsActivity">

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/fab_with_subactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            fab:fab_addButtonColorNormal="@color/colorAccent"
            fab:fab_addButtonColorPressed="@color/colorAccentPressed"
            fab:fab_addButtonPlusIconColor="@color/white">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_server_address_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/colorAccent"
                fab:fab_colorPressed="@color/colorAccentPressed"
                fab:fab_icon="@drawable/ic_add_server_address_24dp" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_user_id_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/colorAccent"
                fab:fab_colorPressed="@color/colorAccentPressed"
                fab:fab_icon="@drawable/ic_add_user_id_24dp" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/ev_station_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/colorAccent"
                fab:fab_colorPressed="@color/colorAccentPressed"
                fab:fab_icon="@drawable/ic_ev_station_24dp" />

        </com.getbase.floatingactionbutton.FloatingActionsMenu>

    </fragment>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reserve_charging_button"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="@string/reserve_charging"
            android:textSize="23sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ready_to_charge_button"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="@string/ready_to_charge"
            android:textSize="23sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>